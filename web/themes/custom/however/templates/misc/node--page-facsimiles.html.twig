{#
  Please note:
  Journal's machine name (slug) comes from the node array.
  Journal's display name comes from the content array.
#}

{% set issue = node.field_issue_reference.entity %}

{% include '@page-facsimiles/page-facsimiles.html.twig' with {
  title:             label,
  journal_slug:      node.field_journal_name.value,
  journal_name:      content.field_journal_name.0['#markup'],
  volume_num:        node.field_volume_number.value,
  issue_num:         node.field_issue_number.value,
  page_facsimiles:   issue.field_journal_page_images_media|view,
  title_display:     issue.field_short_description.value
} %}
