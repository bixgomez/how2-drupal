{%
  set classes = [
    'item-teaser',
    'item-teaser__article',
  ]
%}

{# Clean the fields before passing to component #}
{% set clean_subtitle = content.field_subtitle['#items'] ? content.field_subtitle : false %}
{% set clean_teaser = content.field_teaser_text['#items'] ? content.field_teaser_text : false %}

{% include "@item-teaser/item-teaser.html.twig" with {
  title: label,
  url: url,
  title_prefix: title_prefix,
  title_suffix: title_suffix,
  subtitle: clean_subtitle,
  teaser_text: clean_teaser,
  classes: classes,
} %}
