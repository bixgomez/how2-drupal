{%
    set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'card'
]
%}
{{ attach_library('classy/node') }}
<article{{ attributes.addClass(classes) }}>
    <div class="image-top">
        <div class="content-type">section</div>
        <a href="{{ url }}" rel="bookmark">{{ content.field_image_caption }}</a>
        {% if volume or issue %}
        <div class="volume-issue">
            {{ volume }}<br />
            {{ issue }}
        </div>
        {% endif %}
    </div>
    <div class="content">
        <div class="journal-logo"><img src="/themes/custom/however/images/how2-logo-sm.png" alt="However journal logo"></div>
        <div class="pub-date">{{ issue_pub_date }}</div>
        {% if label and not page %}
            <h3{{ title_attributes }}>
                <a href="{{ url }}" rel="bookmark">{{ label }}</a>
            </h3>
        {% endif %}

        <div{{ content_attributes.addClass('node__content') }}>
            {{ content.field_subtitle }}
        </div>
    </div>
</article>
