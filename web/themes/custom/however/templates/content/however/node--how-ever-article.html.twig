{# Build section links #}
{% set section_links = [] %}
{% if parent_sections %}
  {% for section in parent_sections %}
    {% set section_links = section_links|merge([{
      'title': section.title.value,
      'url': path('entity.node.canonical', {'node': section.id})
    }]) %}
  {% endfor %}
{% endif %}

{% include "@article/article.html.twig" with {
  journal: "HOW(ever)",
  journal_url: "/however",
  title: label,
  title_display: content.field_title_display,
  hide_title: node.field_hide_the_node_title[0].value,
  volume: content.field_volume_reference['#items'].entity.field_volume_number.value,
	issue: content.field_issue_reference['#items'].entity.field_issue_number.value,
  volume_issue: volume_issue,
  issue_pub_date: issue_pub_date,
  issue_url: issue_url,
  archive_url: ontent.field_archive_url,
  person_bio: content.field_person_bio,
  images: content.field_journal_page_images_media,
  working_notes: content.field_working_notes,
  node_body_sections: node.field_body_sections,
  content_body_sections: content.field_body_sections,
  body: content.body,
  section_links: section_links,
} %}

